<h1>Posts</h1>
<table class="table">
				<thead>
					<tr>
            <th>
              #
            </th>
						<th>
							Date
						</th>
						<th>
							Rationale
						</th>
            <th>
              User
            </th>
					</tr>
				</thead>
				<tbody>
          <% @posts.each do |post| %>
					<tr>
            <td>
              <%= post.id %>
            </td>
						<td>
							<%= post.date.to_formatted_s(:long) %>
						</td>
						<td>
							<%= truncate(post.rationale) %>
						</td>
            <td>
              <%= post.user.first_name %>
            </td>
					</tr>
          <% end %>
				</tbody>
			</table>
