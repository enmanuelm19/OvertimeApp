<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.date.to_formatted_s(:long) %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to "", edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(post).update? %>
  </td>
  <td>
    <%= link_to "", post_path(post), method: :delete, id: "delete_#{post.id}_index", class: 'glyphicon glyphicon-trash index-icons', data: { confirm: "Are you sure?" } %>
  </td>
</tr>
