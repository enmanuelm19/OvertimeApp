<tr>
  <td>
      <%= post.id %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
      <%= post.date.to_formatted_s(:long) %>
  </td>
  <td>
      <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
      <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %>
  </td>
  <td>
    <%= link_to "Delete", post_path(post), method: :delete, id: "delete_#{post.id}_index", data: { confirm: "Are you sure?" } %>
  </td>
</tr>
