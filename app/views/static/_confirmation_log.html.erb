<% recent_audit_items.each do |item| %>
    <div class="homepage-block col-md-3">
      <h5>
        <%= item.user.full_name %>
      </h5>
      <p>
        <span class="pending-details">Week Starting:</span> <%= item.start_date %>
      </p>
      <p>
        <span class="pending-details">Confirmed at: </span><%=  item.end_date || status_label('pending') %>
      </p>
      <p>
        <span class="pending-details">Status: </span><%=  status_label item.status %>
      </p>

    </div>
<% end %>